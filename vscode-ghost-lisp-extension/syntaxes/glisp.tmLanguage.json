{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Ghost Lisp",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#entities"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#javascript"
		},
		{
			"include": "#markdown"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name":"comment.line",
					"match": ";[^{}$]*(?=$)"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape",
					"match": "\\\\."
				}
			]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control",
				"match": "((str\\.\\+|str\\.\\=|str\\.\\!\\=|str\\.\\<|str\\.\\<\\=|str\\.\\>|str\\.\\>\\=|\\+\\s|\\-\\s|\\*\\s|\\/\\s|\\>\\s|\\<\\s|\\>=\\s|\\<=\\s|\\=\\s|\\!=\\s)|((?<=\\()\\b(if|set|quote|atom|eq|car|cdr|cons|cond|length|last|chars|find|contains|insert|begin|is-empty|remove|reverse|rfind|slice|loop|read-file|write-file|meta|eval-atom|or|and|lines|read-dir|for-each|eval|run|serve|map|repl|input|drop)\\b))"
			}]
		},
		"entities": {
			"patterns": [{
				"name": "entity.name.type",
				"match": "(?<=\\()\\b(log|str|do|return|continue|pass|lambda|\\:debug|fly|space|snatch)\\b"
			},
			{
				"name": "entity.name.function",
				"match": "(?<=\\()\\b(\\S)*\\b"
			}]
		},
		"constants": {
			"patterns": [{
			"name": "constant.numeric",
			"match": "\\b(([1-9][0-9]*)|0)\\b"
			},{
				"name": "constant.language",
				"match": "\\b(true|false)\\b"
			}]
		},
		"variables": {
			"name": "variable.language",
			"match": "\\bCONTENT\\b"
		},
		"javascript": {
			"begin": "[\\b(javascript|js)\\b]\\b{",
			"end": "}",
			"name": "source.js",
			"patterns": [{
				"name":"storage.modifier",
				"match": "\\b(var|let|extends|const|static)\\b"
			},{
				"name":"keyword.control",
				"match": "\\b(as|if|do|else|while|for|return|break|continue|throw|try|catch|finally|switch|case|default|export|import|from|yield|async|await|debugger|delete)\\b"
			},{
				"name":"keyword.operator",
				"match": "\\b(this|class|function|in|instanceof|of|new|typeof|get|set|\\*\\=|\\/\\=|\\%\\=|\\<\\<\\=|\\>\\>\\=|\\>\\>\\>\\=|\\&\\=|\\^\\=|\\|\\=|\\!|\\+|\\-|\\*|\\/|\\%|\\=\\=|\\=\\=\\=|\\!\\=|\\!\\=\\=|\\>\\=|\\<\\=|\\=\\>|\\>|\\<|\\:|\\?|\\&\\&|\\|\\||\\&|\\~|\\^|\\>\\>|\\>\\>\\>|\\<\\<|\\||\\+\\+|\\-\\-|\\.\\.\\.)\\b"
			}]
		},
		"markdown": {
			"begin": "[\\b(markdown|md)\\b]\\b{",
			"end": "}",
			"name": "source.md",
			"patterns": [{
				"name": "entity.name.section",
				"match": "(?<=#).*$"
			},{
				"name": "comment",
				"match": "(#|\\*|\\_|\\$)"
			}]
		}
	},
	"scopeName": "source.gl"
}